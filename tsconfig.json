{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": "src",
    "paths": {
      "@env/*": ["environments/*"],
      "@app/*": ["app/*"],
      "@dashboard/*": ["app/modules/dashboard/*"],
      "@assets/*": ["../assets/*"],
      "globalize": [
        "./node_modules/globalize/dist/globalize"
      ],
      "globalize/*": [
        "./node_modules/globalize/dist/globalize/*"
      ],
      "cldr": [
        "./node_modules/cldrjs/dist/cldr"
      ],
      "cldr/*": [
        "./node_modules/cldrjs/dist/cldr/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
